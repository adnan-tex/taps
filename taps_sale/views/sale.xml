<odoo>
  <data>
      <record id="sale_order_varient_columns" model="ir.ui.view">
          <field name="name">sale.order.lineview</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">  
              
              <xpath expr="//field[@name='partner_id']" position="before">
                  <field name="sales_type"/>
              </xpath>    

              <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state','not in',['draft','sent','sale']]]}</attribute>
                <attribute name="groups"/>
                <attribute name="options">{'always_reload':true,'no_create':true}</attribute>
              </xpath>
              <xpath expr="//field[@name='partner_invoice_id']" position="after">
                <field name="invoice_details"/>
              </xpath>
              <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="groups"/>
              </xpath>
              <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="delivery_details"/>
                <field name="kind_attention"/>
              </xpath>
              <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state','not in',['draft','sent']]]}</attribute>
                <attribute name="invisible">1</attribute>
              </xpath>              
              
              <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="customer_ref"/>
                <field name="sample_ref" attrs="{'invisible': [['sales_type','=','sample']], 'readonly': [['sales_type','=','sale']]}"/>
              </xpath>              
              
              <xpath expr="//field[@name='validity_date']" position="before">
                <field name="style_ref"/>
                <field name="season"/>
                <field name="department"/>
                <field name="buyer_name"/>
                <field name="hs_code" attrs="{'invisible': [['sales_type','=','sample']]}"/>
                <field name="production_type" attrs="{'invisible': [['sales_type','=','sample']]}"/>
                <field name="order_type" attrs="{'invisible': [['sales_type','=','sample']]}"/>
                <field name="po_no"/>
                <field name="po_date"/>
              </xpath>              

              <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="attrs">{'invisible': [['sales_type','=','Sample Order']], 'readonly': [['state','not in',['draft','sent']]]}</attribute>
              </xpath>
              <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="attrs">{'invisible': [['sales_type','=','Sample Order']]}</attribute>
              </xpath>
              <xpath expr="//field[@name='payment_term_id']" position="after">
                  <field name="order_ref" string="Sales Order Ref." attrs="{'invisible': [('sales_type','!=','oa')], 'readonly': [('sales_type','!=','oa')]}" domain="[('sales_type','=','sale'),('state','=','sale')]"/>
                  <field name="bank" string="Bank"/>
              </xpath>
              
              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='name']" position="after">
                  <field name="dippingfinish"/>
                  <field name="slidercodesfg"/>
                  <field name="ptopfinish"/>
                  <field name="pbotomfinish"/>
                  <field name="topbottom"/>
                  <field name="gap"/>
                  <field name="sizein"/>
                  <field name="sizecm"/>
                  <field name="sizemm"/>
                  <field name="finish"/>
                  <field name="shade"/>
              </xpath>
              
              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='name']" position="attributes">
                <attribute name="attrs">{}</attribute>
                <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//field[@name='note']" position="after">
                  <field name="others_note" nolabel="1" placeholder="Others Terms and conditions..."/>
              </xpath>
              
          </field>
      </record>
  </data>
</odoo>