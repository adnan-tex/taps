<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="report_oa_invoice">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
					<h4 class="text-center">
						<strong>
							ORDER ACCEPTANCE
							</strong>
					</h4>
					<h2 class="mt15" style="font-size: 20px">
						<span>OA NUMBER # <t t-esc="o.name"/>
						</span>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto col-4 mw-100 mb-2">
							<p>
								<strong>Customer Details</strong>
							</p>
							<p>
								<strong>
									<t t-esc="o.partner_id.name"/>
								</strong>
								<br/>
								<t t-esc="o.partner_id.street"/>
								<br/>
								<t t-esc="o.partner_id.city"/>
								<br/>
								<t t-esc="o.partner_id.country_id.name"/>
							</p>
						</div>
						<div class="col-auto col-4 mw-100 mb-2">
							<p>
								<strong>Invoice Details</strong>
							</p>
							<p>
								<t t-esc="o.partner_invoice_id.name"/>
								<br/>
								<t t-esc="o.invoice_details"/>
							</p>
						</div>
						<div class="col-auto col-4 mw-100 mb-2">
							<p>
								<strong>Delivery Details</strong>
							</p>
							<p>
								<t t-esc="o.partner_shipping_id.name"/>
								<br/>
								<t t-esc="o.delivery_details"/>
							</p>
						</div>
					</div>
					<div class="row mt32 mb32">
						<div class="col-auto col-3 mw-100 mb-2">
							<p>
								<strong>PO Number:</strong>
								<br/>
								<t t-esc="o.po_no"/>
							</p>
						</div>
						<div class="col-auto col-3 mw-100 mb-2">
							<p>
								<strong>PO Date:</strong>
								<br/>
								<t t-esc="o.po_date"/>
							</p>
						</div>
						<div class="col-auto col-3 mw-100 mb-2">
							<p>
								<strong>Expiration:</strong>
								<br/>
								<t t-esc="o.validity_date"/>
							</p>
						</div>
						<div class="col-auto col-3 mw-100 mb-2">
							<p>
								<strong>Order Date:</strong>
								<br/>
								<t t-esc="o.date_order"/>
							</p>
						</div>
					</div>
					<div class="row pt-2 mt-2 pb-2 mb-2">
						<table class="table table-sm o_main_table" style="margin:auto;border:none">
							<thead style="border: none;">
								<tr align="center" style="border: none;">
									<th style="border: none;">Customer Ref</th>
									<!--<th>Sample Ref</th>-->
									<th style="border: none;">Style Ref</th>
									<th style="border: none;">Season</th>
									<th style="border: none;">Department</th>
									<th style="border: none;">Buyer Name</th>
									<th style="border: none;">HS Code</th>
									<th style="border: none;">Production Type</th>
									<th style="border: none;">Order Type</th>
								</tr>
							</thead>
							<tbody style="border: none;">
								<tr align="center" style="border: none;">
									<td style="border: none;">
										<t t-esc="o.customer_ref"/>
									</td>
									<!--<td><t t-esc="o.sample_ref"/></td>-->
									<td style="border: none;">
										<t t-esc="o.style_ref"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.season"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.department"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.buyer_name"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.hs_code"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.production_type"/>
									</td>
									<td style="border: none;">
										<t t-esc="o.order_type"/>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
                    <t t-set="quantity_total" t-value="0"/>
					<table class="table table-sm o_main_table">
						<thead>
							<th class="text-left">Item Details</th>
							<th class="text-center">Image</th>
							<th class="text-left">Size</th>
							<th class="text-right">Quantity</th>
							
						</thead>
						<tbody>
							<t t-foreach="o.order_line" t-as="line">
								<tr>
									<t t-if="not line.display_type">
										<td>
											<span>
												<t t-esc="line.name"/>
											</span>
										</td>
										<td>
											<img t-if="line.product_template_id.image_1920" t-att-src="image_data_uri(line.product_template_id.image_1920)"/>
										</td>
										<td style="vertical-align:middle">
											<t t-if="line.sizein != 'N/A'">
												<span>
													<t t-esc="line.sizein"/> Inch</span>
											</t>
											<t t-if="line.sizecm != 'N/A'">
												<span>
													<t t-esc="line.sizecm"/> CM</span>
											</t>
										</td>
										<td class="text-right" style="vertical-align:middle">
											<span>
												<t t-esc="line.product_uom_qty"/>
                                                <t t-set="quantity_total" t-value="quantity_total+line.product_uom_qty"/>
											</span>
											<span>
												<t t-esc="line.product_uom.name"/>
											</span>
										</td>
										
									</t>
								</tr>
							</t>
						</tbody>
					</table>
					
                    <div class="clearfix">
						<div class="row float-right pr-3">
							<div>
								<table class="table table-sm o_main_table">
									
									<tr class="border-black o_subtotal">
										<td>
											<strong>Total</strong>
										</td>
										<td>
											<span>
												<t t-esc="quantity_total"/>
											</span>
										</td>
									</tr>
								</table>
							</div>
						</div>
					</div>
					<p>
						<span t-esc="o.payment_term_id.note"/>
					</p>
					<div class="row mb32 mt32">
						<diV class="col-6">
							<p>Terms and Condition:<br/>
								<span t-esc="o.note"/>
							</p>
						</diV>
						<diV class="col-6">
							<p>Others Terms and Condition:<br/>
								<span t-esc="o.others_note"/>
							</p>
						</diV>
					</div>
				</div>
				</t>
			</t>
		</t>
	</template>
</odoo>   
    