<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="report_oa_invoice_mt">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.internal_layout">
                    <style>
				    table,th,td,tr
				    {
				    border: 1px solid black !important;
				    }
                    </style>
					<div class="page">
					<!-- 					<div class="footer text-center" style="margin:0px; padding:0px;">
                    Page: <span class="page"/>/<span class="topage"/>
					</div> -->
					<h4 class="text-center" style="font-size:16px">
						<strong>
							ORDER ACCEPTANCE
							</strong>
					</h4>
					<div class="mt32 mb32">
						<div class="float-left">
							<h2 style="font-size: 15px">
								<span>OA NO - TZBD - <t t-esc="o.name"/>
								</span>
								<t t-if="o.is_revised == True">
									<span>-<span t-field="o.revised_no"/>
									</span>
								</t>
							</h2>
						</div>
						<div class="float-right">
							<h2 style="font-size: 15px">
								<span>PI NO - TZBD - <t t-esc="o.order_ref.pi_number"/>
								</span>
								<t t-if="o.order_ref.is_revised == True">
									<span>-<span t-field="o.order_ref.revised_no"/>
									</span>
								</t>
							</h2>
						</div>
						<!--<div class="float-right">-->
						<!--	<h5 style="font-size: 12px">-->
						<!--		<strong>BIN NO: 000230362-0305</strong>-->
						<!--	</h5>-->
						<!--</div>-->
					</div>
					<br/>
					<div class="row mt32" style="font-size:13px">
						<div class="col-3">
							<div class="row mt32 mb32">
								<div class="col-auto col-6">
									<div>
										<strong>CUSTOMER DETAILS</strong>
									</div>
									<p>
										<span t-esc="o.partner_id.name"/>
										<br/>
										<span style="font-size:11px" t-esc="o.partner_id.contact_address_complete"/>
									</p>
								</div>
								<div class="col-auto col-6">
									<div>
										<strong>DELIVERY ADDRESS</strong>
									</div>
									<p>
										<span t-esc="o.partner_shipping_id.name"/>
										<br/>
										<span style="font-size:11px" t-esc="o.partner_shipping_id.contact_address_complete"/>
									</p>
								</div>
							</div>
						</div>
						<div class="col-7">
							<div class="row mb32 mt32">
								<div class="col-auto col-2">
									<div>
										<strong>SALESPERSON</strong>
									</div>
									<p>
										<span t-esc="o.sale_representative.name"/>
									</p>
								</div>
								<div class="col-auto col-3">
									<div>
										<strong>KIND ATTENTION</strong>
									</div>
									<p>
										<span t-esc="o.kind_attention"/>
									</p>
								</div>
								<div class="col-auto col-2">
									<div>
										<strong>BUYER NAME</strong>
									</div>
									<p>
										<span t-esc="o.buyer_name.name"/>
									</p>
								</div>
								<div class="col-auto col-2">
									<div>
										<strong>PI DATE</strong>
									</div>
									<p>
										<t t-if="o.pi_date">
											<t t-esc="o.pi_date.strftime('%d-%m-%Y')"/>
										</t>
									</p>
								</div>
								<div class="col-auto col-3">
									<div>
										<strong>OA DATE</strong>
									</div>
									<p>
										<span t-esc="o.create_date.strftime('%d-%m-%Y')"/>
									</p>
								</div>
							</div>
							<br/>
							<div class="row mt32">
								<div class="col-auto col-2">
									<p>
										<strong>STYLE REF</strong>
										<br/>
										<t t-if="o.style_ref">
											<t t-esc="o.style_ref"/>
										</t>
									</p>
								</div>
								<div class="col-auto col-3">
									<p>
										<strong>PO NUMBER</strong>
										<br/>
										<t t-esc="o.po_no"/>
									</p>
								</div>
								<div class="col-auto col-2">
									<p>
										<strong>PO DATE</strong>
										<br/>
										<t t-if="o.po_date">
											<t t-esc="o.po_date.strftime('%d-%m-%Y')"/>
										</t>
									</p>
								</div>
								<div class="col-auto col-2">
									<p>
										<strong>SEASON</strong>
										<br/>
										<t t-if="o.season">
											<t t-esc="o.season"/>
										</t>
									</p>
								</div>
								<div class="col-auto col-3">
									<div>
										<strong>PAYMENT TERM</strong>
									</div>
									<p>
										<t t-esc="o.payment_term_id.name"/>
									</p>
								</div>
							</div>
						</div>
						<div class="col-2">
							<p>
								<strong>REMARKS</strong>
								<br/>
								<t t-if="isinstance(o.remarks, str)">
									<t t-set="string_to_output" t-value="o.remarks.split('\n')"/>
									<t t-foreach="string_to_output" t-as="string_line">
										<span t-esc="string_line"/>
										<br/>
									</t>
								</t>
							</p>
						</div>
					</div>
					<div style="font-size:12px">
					<t t-set="p_code" t-value="0"/>
					<t t-set="shape" t-value="0"/> 
					<t t-set="logo" t-value="0"/>
					<t t-set="logo_ref" t-value="0"/>
					<t t-set="logo_type" t-value="0"/>
					<t t-set="finish" t-value="0"/>
					<t t-set="finish_ref" t-value="0"/>
					<t t-set="b_part" t-value="0"/>
					<t t-set="c_part" t-value="0"/>
					<t t-set="d_part" t-value="0"/>
					<t t-set="style_gmt" t-value="0"/>
					<t t-set="mm" t-value="0"/>
					<t t-set="dis" t-value="0"/>
					
					  <t t-foreach="o.order_line" t-as="line">
					    <t t-if="p_code == 0">
								<t t-if="line.product_code">
									<t t-set="p_code" t-value="1"/>
								</t>
							</t>
							
							<t t-if="shape == 0">
								<t t-if="line.shape">
									<t t-set="shape" t-value="1"/>
								</t>
							</t>
							
							<t t-if="logo == 0">
								<t t-if="line.logo">
									<t t-set="logo" t-value="1"/>
								</t>
							</t>
							
							<t t-if="logoref == 0">
								<t t-if="line.logo_ref">
									<t t-set="logo_ref" t-value="1"/>
								</t>
							</t>
							
							
							<t t-if="logo_type == 0">
								<t t-if="line.logo_type">
									<t t-set="logo_type" t-value="1"/>
								</t>
							</t>
							
							<t t-if="finish == 0">
								<t t-if="line.finish">
									<t t-set="finish" t-value="1"/>
								</t>
							</t>
							
							
							<t t-if="finish_ref == 0">
								<t t-if="line.finish_ref">
									<t t-set="finish_ref" t-value="1"/>
								</t>
							</t>
							
							
							<t t-if="b_part == 0">
								<t t-if="line.b_part">
									<t t-set="b_part" t-value="1"/>
								</t>
							</t>
							
							
							<t t-if="c_part == 0">
								<t t-if="line.c_part">
									<t t-set="c_part" t-value="1"/>
								</t>
							</t>
							
							
							<t t-if="d_part == 0">
								<t t-if="line.d_part">
									<t t-set="d_part" t-value="1"/>
								</t>
							</t>
							
							<t t-if="style_gmt == 0">
								<t t-if="line.style_gmt">
									<t t-set="style_gmt" t-value="1"/>
								</t>
							</t>
							
							<t t-if="mm == 0">
								<t t-if="line.sizemm">
								  <t t-if="line.sizemm != 'N/A'">
									<t t-set="mm" t-value="1"/>
									</t>
								</t>
							</t>
							
							
							
					  </t>
					  
						<table class="table table-sm o_main_table">
							<thead>
							  <t t-set="line_count" t-value="0"/>
							   
							  <tr>
							 
								<th class="text-left">Item</th>
								<th class="text-center">Image</th>
								<t t-set="line_count" t-value="2"/>
								<t t-if="p_code == 1">
								  <th class="text-left">CODE</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="shape == 1">
								  <th class="text-left">Shape</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								
								<t t-if="logo == 1">
								  <th style="white-space: nowrap;">Logo</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="logo_ref == 1">
								  <th style="white-space: nowrap;">LOGO REF</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="logo_type == 1">
								  <th class="text-left" style="white-space: nowrap;">LOGO TYPE</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="finish == 1">
								  <th class="text-left" style="white-space: nowrap;">FINISH</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="finish_ref == 1">
								<th class="text-right" style="white-space: nowrap;">FINISH REF</th>
								<t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="b_part == 1">
								<th class="text-right">B_PART</th>
								<t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="c_part == 1">
								<th class="text-right">C_PART</th>
								<t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="d_part == 1">
								<th class="text-right">D_PART</th>
								<t t-set="line_count" t-value="line_count+1"/>
								</t>
								<t t-if="mm == 1">
								  <th class="text-left">Size(MM)</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								</t>
								
								  <th class="text-right">Qty/PC</th>
								  <t t-set="line_count" t-value="line_count+1"/>
								
								
								  <th class="text-right">Qty/Grs</th>
								
								
								
								</tr>
								
							</thead>
							<tbody>
								<t t-set="total_quantity" t-value="0"/>
								<t t-set="id" t-value="0.0"/>
								<t t-set="item" t-value=""/>
								
								<t t-set="fnamebcd" t-value=""/>
								<t t-set="logo" t-value=""/>
								<t t-set="bcd" t-value=""/>
								<t t-set="nailmart" t-value=""/>
								<t t-set="nailcap" t-value=""/>
								<t t-set="nu1washer" t-value=""/>
								<t t-set="nu2washer" t-value=""/>
								<t t-foreach="o.order_line" t-as="line">
									<tr>
										<t t-if="not line.display_type">
										  
										  
											<td><strong><span t-esc="line.product_template_id.name"/></strong></td>
											<td></td>
											
											<t t-if="p_code == 1">
											 <t t-if="line.product_code">
											    <td><strong><span  t-esc="line.product_code"/></strong></td>
											 </t>
											 <t t-if="not line.product_code">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="shape == 1">
											 <t t-if="line.shape">
											    <td><strong><span t-esc="line.shape"/></strong></td>
											 </t>
											 <t t-if="not line.shape">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="logo == 1">
											 <t t-if="line.logo">
											    <td><strong><span t-esc="line.logo"/></strong></td>
											 </t>
											 <t t-if="not line.logo">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="logo_ref == 1">
											 <t t-if="line.logo_ref">
											    <td><strong><span t-esc="line.logo_ref"/></strong></td>
											 </t>
											 <t t-if="not line.logo_ref">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="logo_type == 1">
											 <t t-if="line.logo_type">
											    <td><strong><span t-esc="line.logo_type"/></strong></td>
											 </t>
											 <t t-if="not line.logo_type">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="finish == 1">
											 <t t-if="line.finish">
											    <td><strong><span t-esc="line.finish"/></strong></td>
											 </t>
											 <t t-if="not line.finish">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="finish_ref == 1">
											 <t t-if="line.finish_ref">
											    <td><strong><span t-esc="line.finish_ref"/></strong></td>
											 </t>
											 <t t-if="not line.finish_ref">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="b_part == 1">
											 <t t-if="line.b_part">
											    <td><strong><span t-esc="line.b_part"/></strong></td>
											 </t>
											 <t t-if="not line.b_part">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="c_part == 1">
											 <t t-if="line.c_part">
											    <td><strong><span t-esc="line.c_part"/></strong></td>
											 </t>
											 <t t-if="not line.c_part">
											    <td></td>
											 </t>
											</t>
											
											<t t-if="d_part == 1">
											 <t t-if="line.d_part">
											    <td><strong><span t-esc="line.d_part"/></strong></td>
											 </t>
											 <t t-if="not line.d_part">
											    <td></td>
											 </t>
											</t>
											
											
											<t t-if="style_gmt == 1">
											 <t t-if="line.style_gmt">
											    <td><strong><span t-esc="line.style_gmt"/></strong></td>
											 </t>
											 <t t-if="not line.style_gmt">
											    <td></td>
											 </t>
											</t>
											
											
											<t t-if="mm == 1">
											 <t t-if="line.sizemm">
											    <td><strong><span t-esc="line.sizemm"/></strong></td>
											 </t>
											 <t t-if="not line.sizemm">
											    <td></td>
											 </t>
											</t>
											
											
											<td><strong><span t-esc="line.product_uom_qty*144" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}"/></strong></td>
											<td>
											  <strong>
											    <span t-esc="line.product_uom_qty" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}"/>
											    <t t-set="total_quantity" t-value="line.product_uom_qty+total_quantity"/>
											  </strong>
											 </td>
											
											
										</t>
									</tr>
								</t>
								<tr>
									<td t-att-colspan="line_count" style="vertical-align:middle;border-top: 1px solid black; border-bottom:hidden ! important; border-left: hidden ! important;"/>
									<!--<td colspan="2" style="vertical-align:middle;border-top: 1px solid black;">-->
									<!--	<strong>Total Quantity :</strong>-->
									<!--</td>-->
									<td colspan="1" class="text-right" style="vertical-align:middle;border-top: 1px solid black;">
										<strong>
											<t t-esc="total_quantity" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}"/>
										</strong>
									</td>
									
								</tr>
							</tbody>
						</table>
					</div>
					
					<div style="page-break-inside:avoid">
						<div class="row" style="font-size:12px;page-break-inside:avoid;">
							<t t-if="o.cause_of_revision">
								<div class="col-12">
									<p>
										<t t-if="(o.is_hold == False) and (o.is_revised == True)">
											<strong>REVISION CAUSE:</strong>
										</t>
										<t t-if="(o.is_hold == True) and (o.is_revised == False)">
											<strong>HOLDING CAUSE:</strong>
										</t>
										<t t-if="(o.is_hold == True) and (o.is_revised == True)">
											<strong>REVISION &amp; HOLDING CAUSE:</strong>
										</t>
										<br/>
										<t t-if="isinstance(o.cause_of_revision, str)">
											<t t-set="string_to_output" t-value="o.cause_of_revision.split('\n')"/>
											<t t-foreach="string_to_output" t-as="string_line">
												<strong>
													<span style="font-size:14px;" t-esc="string_line"/>
												</strong>
												<br/>
											</t>
										</t>
									</p>
								</div>
							</t>
						</div>
						<br/>
						<div class="row" style="font-size:12px;page-break-inside:avoid;">
							<div class="col-12">
								<t t-if="o.cause_of_replacement">
									<strong>REPLACEMENT CAUSE:</strong>
									<br/>
									<t t-if="isinstance(o.cause_of_replacement, str)">
										<t t-set="string_to_output" t-value="o.cause_of_replacement.split('\n')"/>
										<t t-foreach="string_to_output" t-as="string_line">
											<strong>
												<span style="font-size:14px;" t-esc="string_line"/>
											</strong>
											<br/>
										</t>
									</t>
								</t>
							</div>
						</div>
						<br/>
						
					</div>
				</div>
				<div class="row mt-2 mb-2">
				  <div class="col-12 text-center">
				    NOTE : ALL KIND OF TEST MUST BE PASS AS PER BUYER REQUIREMENT.
				  </div>
				</div>
				</t>
			</t>
		</t>
	</template>
</odoo>   
    