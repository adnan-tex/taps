<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="sale_report_wizard">
        <field name="name">sale.pdf.report.form.view</field>
        <field name="model">sale.pdf.report</field>
        <field name="arch" type="xml">
            <form string="Sale Report">
                <group>
                    <group>
                        <field name="report_type" string="Report Type" groups="hr_holidays.group_hr_holidays_user"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                       
                    </group>
                    <group>
                        <field name="holiday_type" string="Mode" groups="hr_holidays.group_hr_holidays_user"/>
                        
                        <field name="mode_company_id" string="Company" groups="hr_holidays.group_hr_holidays_user" attrs="{
                        'required': [('holiday_type', '=', 'company')],
                        'invisible': [('holiday_type', '!=', 'company')]
                        }" options="{'no_create': True, 'no_open': True}"/>
                        <field name="company_all" groups="hr_holidays.group_hr_holidays_user" attrs="{
                        'required': [('holiday_type', '=', 'companyall')],
                        'invisible': [('holiday_type', '!=','companyall')]
                        }" options="{'no_create': True, 'no_open': True}"/>
                        <field name="bank_id"/>
                    </group>
                </group>
                <footer>
                    <!-- <button string="Print" name="" type="object" class="btn-primary"/>
                    <button string="Generate xlsx" name="" type="object" class="btn-primary"/> -->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="all_sale_report" model="ir.actions.act_window">
        <field name="name">Sale Report</field>
        <field name="res_model">sale.pdf.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="taps_sale.menu_all_sale_report"
              name="Sale Report"
              sequence="3"
              action="all_sale_report"
              parent="sale.menu_sale_report"/>  
    
    
    
</odoo>