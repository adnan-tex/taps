<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <report
        id="action_salary_headwise_pdf_report"
        model="salary.headwise.pdf.report"
        string="Headwise Report"
        name="taps_hr.salary_headwise_pdf_template"
        file="taps_hr.salary_headwise_pdf_template"
        report_type="qweb-pdf"
    />

    <template id="salary_headwise_pdf_template">
    <t t-call="web.html_container">
      <t t-call="web.basic_layout">
          <div class="header">
            <img t-if="docs.employee_id.company_id.logo" t-att-src="image_data_uri(docs.employee_id.company_id.logo)" style="max-height: 80px;" alt="Logo"/>
          </div>
          <div class="page">
              <center><h2>Salary Headwise Report</h2></center>
              <br/>
              <!--<div class="row mt32 mb32 pl-3" style="white-space: nowrap; overflow: hidden;">-->
              <div class="col-6">
                  <strong>Name: </strong>
                  <span t-esc="datas[0]"/>
              </div>
              <div class="col-6">
                  <strong>Date: </strong>
                  <span t-esc="datas[3]"/> - <span t-esc="datas[4]"/>
              </div>
              <!--</div>-->
              <br/>

              <table class="table table-sm table-bordered">
                  <thead>
                      <tr align="center">
                          <th>SL</th>
                          <th>ID</th>
                          <th>Employee Name</th>
                          <th>Section</th>                                
                          <th>Amount</th>

                      </tr>
                  </thead>
                  <tbody>
                      <tr t-foreach="docs" t-as="line">
                          <td class="text-center">
                            <span t-esc="line_index+1" class="text-nowrap"/>
                          </td>
                          <td class="text-center">
                            <span t-esc="line.employee_id.emp_id" class="text-nowrap"/>
                          </td>
                          <td>
                            <span t-esc="line.employee_id.name" class="text-nowrap"/>
                          </td>
                          <td>
                            <span t-esc="line.employee_id.department_id.name" class="text-nowrap"/>
                          </td>
                          <td class="text-right">
                              <span t-esc="line.total" class="text-nowrap"/>
                          </td>
                      </tr>
                  </tbody>
              </table>

              <div class="row justify-content-end">
                  <div class="col-4">
                      <table class="table table-sm">
                          <tr class="border-black">
                              <td><strong>Total</strong></td>
                              <td class="text-right">
                                  <span t-esc="datas[2]"/>
                              </td>
                          </tr>
                      </table>
                  </div>
              </div>
          </div>
      </t>
    </t>        
    </template>

</odoo>