<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

 <template id="hris_loan_pdf_template">
     <t t-foreach="docs" t-as="employee">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                   <style>
                    .joining-letter{
                    padding:30px 50px;
                    td{
                    padding:5px 10px
                    }
                    table{
                    width:100%
                    }
                    }
                </style>
                    <div class="page">
                      <div class="joining-letter">
                        <p style="text-align: center;font-size:20px">
                            <i><b><u>Account Opening Letter of Introduction</u></b></i>
                        </p>
                        <br/>
                        <br/>
                        <p>Date:
                            <span t-esc="datas[2]"/>
                            <br/>

                        </p>
                        <p>
                          The Manager<br/>
                          <span t-esc="datas[4]"/><br/>
                          Dhaka.<br/>  
                        </p>
                        <br/>

                        <p>
                          <div>
                            <b>Subject : 
                                    <u>Payroll Account Opening.</u>
                                </b>
                          </div>
                        </p>
                        <br/>
                        <p><div>
                         Please arrange to open a Payroll Account for the following employee of TEX ZIPPERS (BD) LIMITED. He/she is a Bangladeshi Citizen.
His/Her particular information are given below:
                        </div></p>
                        <br/>

                        <p>
                          <div>
                            <table class="table table-bordered">
                              <tr>
                                <th>Name</th>
                                <td><span t-esc="employee.name"/></td>
                              </tr>
                               <tr>
                                <th>Date of Birth</th>
                                <td><span t-esc="employee.birthday"/></td>
                              </tr>
                               <tr>
                                <th>Present Address</th>
                                <td><span t-esc="employee.birthday"/></td>
                              </tr>
                               <tr>
                                <th>Permanent Adress</th>
                                <td><span t-esc="employee.address_home_id.street"/></td>
                              </tr>
                               <tr>
                                <th>Date of Joinning</th>
                                <td><span t-esc="employee.joining_date"/></td>
                              </tr>
                               <tr>
                                <th>Designation</th>
                                <td></td>
                              </tr>
                              <tr>
                                <th>Type of Employment</th>
                                <td><t t-if="employee.company_id.partner_id =='Contract Employees'">
                                  <span>Contractual</span>
                                </t>
                                <t t-if="employee.company_id.partner_id !='Contract Employees'">
                                  <span>Regular</span>
                                </t>
                                </td>
                              </tr>
                              <tr>
                                <th>Monthly Salary Amount</th>
                                <td><span t-esc="employee.contract_id.wage"/></td>
                              </tr>
                            </table>
                          </div>
                        </p>
                        <br/>
                        <br/>
                        <p><div>
                          বিনীত নিবেদক-
                          <br/>
                          নাম :<strong t-esc="employee.name"/> <br/>
                          বিভাগ :  <strong t-esc="employee.department_id.name"/> <br/>
                          শাখা :  <strong t-esc="employee.job_id.name"/> <br/>
                          তারিখ :  <strong t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/> <br/>
                        </div></p>
                      </div>


                    </div>

                </t>
            </t>
        </t>
  </template>

</odoo>
