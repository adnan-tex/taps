<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <report
        id="action_job_card_pdf_report"
        model="job.card.pdf.report"
        string="Job Card"
        name="taps_hr.jobcard_pdf_template"
        file="taps_hr.jobcard_pdf_template"
        report_type="qweb-pdf"
    />

    <template id="jobcard_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3>
                        <center>Employee Job Card</center>
                    </h3>
                    <h6>
                        <center>
                            Date:
                            <span t-esc="datas['date_from']"/> - <span t-esc="datas['date_to']"/>
                        </center>
                    </h6>
                    <div class="row">
                        <div class="col-6">
                            ID:
                            <span t-esc="docs.employee_id.emp_id"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            Name:
                            <span t-esc="docs.employee_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            Department:
                            <span t-esc="docs.employee_id.department_id.parent_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            Section:
                            <span t-esc="docs.employee_id.department_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            Position:
                            <span t-esc="docs.employee_id.job_id.name"/>
                        </div>
                    </div>
                    <br/>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th style="color:#875A7B;">Date</th>
                                <th style="color:#875A7B;">Office In Time</th>
                                <th style="color:#875A7B;">In Time</th>
                                <th style="color:#875A7B;">In Flag</th>
                                <th style="color:#875A7B;">Office Out Time</th>
                                <th style="color:#875A7B;">Out Time</th>
                                <th style="color:#875A7B;">Out Flag</th>
                                <th style="color:#875A7B;">OT Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-as="att" t-foreach="docs">
                                <tr>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.attDate"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.inTime" t-options='{"widget": "float_time"}'/>
                                        </div>
                                    </td>
                                    <td >
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.inHour" t-options='{"widget": "float_time"}'/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.inFlag"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.outTime" t-options='{"widget": "float_time"}'/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.outHour" t-options='{"widget": "float_time"}'/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.outFlag"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div align="center" style="margin-bottom:0pt;margin-top:0pt;max-height:15pt;">
                                            <span t-field="att.otHours" t-options='{"widget": "float_time"}'/>
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>