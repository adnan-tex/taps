<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_data_marriage_wish_email_template" model="ir.cron">
            <field name="name">Employee: Marriage Anniversery Wish Send by email</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model._action_marriage_wish_email()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall">2022-12-16 10:00:00</field>
        </record>
        <record id="marriage_wish_email_template" model="mail.template">
            <field name="name">Employee: Marriage Anniversery Wish Send by email</field>
            <field name="model_id" ref="taps_hr.model_hr_employee"/>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">	${(object.private_email | object.email)}</field>
            <field name="subject">Happy Marriage Anniversery to ${(object.name | object.spouse_complete_name)}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Dear ${object.name},</p><br/><br/><br/>

                </div>

                <style>
                    .hd{
                        background-color:#9C5789;
                        font-weight: bold ! important; 
                        }
                </style>
                  <div class="row">
                    <div class="col-4 text-center p-0 m-0">
                        <div class="header-left">
                             <img class="img-responsive " style="height:318pt;width:100%" src="/web/image/hr.employee/${object.id}/image_1920"/>

<h5 class="hd text-uppercase text-light py-2 squared-pill" style="font-weight:400;">${object.name} (${object.emp_id})</h5>


                            
                        </div>
                    </div>
                    <div class="col-8 p-0 m-0">
                        <div class="header-right">
                            <img src="/taps_hr/static/img/marriage.gif" alt="Marriage wish" width="100%" height="100%"/>


                        </div>
                    </div>
              
                        
                </div>
                <div style="text-align:center;">
                    <p>** This is an auto generated mail from Odoo. Please do not reply **</p>
                </div>
            </field>
        </record>
    </data>
</odoo>