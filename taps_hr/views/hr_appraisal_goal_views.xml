<?xml version="1.0" ?>
<odoo>
    <record id="hr_appraisal_goal_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.appraisal.goal.view.form.inherit</field>
        <field name="model">hr.appraisal.goal</field>
        <field name="inherit_id" ref="hr_appraisal.hr_appraisal_goal_view_form"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='progression']" position="attributes">
                    <attribute name="string">Weight</attribute>
                </xpath>
                <xpath expr="//field[@name='manager_id']" position="after">
                    <label for="ytd"/>
                    <div class="o_row" name="ytd">
                        <field name="ytd" nolabel="1"/>
                        <span>&#37;</span>
                    </div>
<!--                     <field name="ytd" widget="badge"/> -->
                </xpath>
                <xpath expr="/form[1]/sheet[1]/group[1]" position="after">
                    <group>
                        <group>
                            <label for="apr"/>
                            <div class="o_row" name="apr">
                                <field name="apr" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="may"/>
                            <div class="o_row" name="may">
                                <field name="may" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="jun"/>
                            <div class="o_row" name="jun">
                                <field name="jun" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="jul"/>
                            <div class="o_row" name="jul">
                                <field name="jul" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="aug"/>
                            <div class="o_row" name="aug">
                                <field name="aug" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="sep"/>
                            <div class="o_row" name="sep">
                                <field name="sep" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
<!--                             <field name="apr"/> -->
<!--                             <field name="may"/> -->
<!--                             <field name="jun"/> -->
<!--                             <field name="jul"/> -->
<!--                             <field name="aug"/> -->
<!--                             <field name="sep"/> -->
                        </group>
                        <group>
                            <label for="oct"/>
                            <div class="o_row" name="oct">
                                <field name="oct" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="nov"/>
                            <div class="o_row" name="nov">
                                <field name="nov" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="dec"/>
                            <div class="o_row" name="dec">
                                <field name="dec" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="jan"/>
                            <div class="o_row" name="jan">
                                <field name="jan" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="feb"/>
                            <div class="o_row" name="feb">
                                <field name="feb" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
                            <label for="mar"/>
                            <div class="o_row" name="mar">
                                <field name="mar" nolabel="1"/>
                                <span>&#37;</span>
                            </div>
<!--                             <field name="oct"/> -->
<!--                             <field name="nov"/> -->
<!--                             <field name="dec"/> -->
<!--                             <field name="jan"/> -->
<!--                             <field name="feb"/> -->
<!--                             <field name="mar"/> -->
                        </group>
                    </group>
                </xpath>
        </field>
    </record>

    <record id="hr_appraisal_goal_view_tree_inherit" model="ir.ui.view">
        <field name="name">hr.appraisal.goal.view.tree.inherit</field>
        <field name="model">hr.appraisal.goal</field>
        <field name="inherit_id" ref="hr_appraisal.hr_appraisal_goal_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='progression']" position="attributes">
                <attribute name="string">Weight</attribute>
            </xpath>
            <tree sample="1">
                <field name="ytd" widget="badge"/>
                <field name="apr"/>
                <field name="may"/>
                <field name="jun"/>
                <field name="jul"/>
                <field name="aug"/>
                <field name="sep"/>
                <field name="oct"/>
                <field name="nov"/>
                <field name="dec"/>
                <field name="jan"/>
                <field name="feb"/>
                <field name="mar"/>
            </tree>
        </field>
    </record>



