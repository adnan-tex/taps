    <record id="hr_appraisal_goal_view_tree_inherit" model="ir.ui.view">
        <field name="name">hr.appraisal.goal.view.tree.inherit</field>
        <field name="model">hr.appraisal.goal</field>
        <field name="inherit_id" ref="hr_appraisal.hr_appraisal_goal_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='progression']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Objective</attribute>
            </xpath>
            <xpath expr="//field[@name='progression']" position="after">
                <field name="baseline" digits="[3,1]"/>
                <field name="target" digits="[3,1]"/>
                <field name="weight" digits="[3,1]"/>
                <field name="condition"/>
                <field name="month"/>
            </xpath>
            <tree sample="1">
                <field name="y_t_ytd" digits="[3,1]"/>
                <field name="y_a_ytd" digits="[3,1]"/>
                <field name="y_ytd" digits="[3,1]"/>
<!--                 <field name="t_ytd"/>
                <field name="a_ytd"/>
                <field name="ytd" widget="progressbar"/> -->
                <field name="t_apr" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_apr" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="apr" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_may" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_may" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="may" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="t_jun" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_jun" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="jun" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_jul" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_jul" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="jul" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="t_aug" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_aug" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="aug" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_sep" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_sep" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="sep" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="t_oct" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_oct" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="oct" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_nov" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_nov" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="nov" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="t_dec" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_dec" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="dec" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_jan" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_jan" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="jan" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="t_feb" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="a_feb" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="feb" digits="[3,1]" decoration-bf="1" decoration-danger="1"/>
                <field name="t_mar" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="a_mar" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
                <field name="mar" digits="[3,1]" decoration-bf="1" decoration-success="1"/>
            </tree>
        </field>
    </record>



