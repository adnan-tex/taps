<odoo>
  <data>
      <record id="inherited_hr_attendance_view_tree" model="ir.ui.view">
            <field name="name">inherited_hr_attendance_view_tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.inherited_hr_attendance_view_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <xpath expr="//field[@name='employee_id']" position="after">
                        <field name="date" />
                        <field name="inTime" />
                        <field name="inFlag" />
                        <field name="outTime" />
                        <field name="outFlag" />
                        <field name="otHours" />
                    </xpath>
                </tree>
            </field>
        </record>
      
