<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="report_imprest">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
					<div class="row mb-4">
						<div class="col">
							<span>
								<b>IMPREST NUMBER : </b>
							</span>
							<span class="h2 o_bold text-danger">
								<t t-esc="o.name"/>
							</span>
						</div>
					</div>
					<div class="row mb-4">
						<div class="col-3">
							<span>
								<strong>DESCRIPTION</strong>
							</span>
							<p>
								<t t-esc="o.description"/>
							</p>
						</div>
						<div class="col-3">
							<span>
								<strong>COMPANY</strong>
							</span>
							<p>
								<t t-esc="o.imprest_company_id.name"/>
							</p>
						</div>
						<div class="col-3">
							<span>
								<strong>IMPREST DATE</strong>
							</span>
							<p>
								<t t-esc="o.imprest_date.strftime('%m/%d/%Y')"/>
							</p>
						</div>
						<div class="col-3">
							<span>
								<strong>EMPLOYEE CONTACT</strong>
							</span>
							<p>
								<t t-esc="o.imprest_work_phone"/>
							</p>
						</div>
					</div>
					<table class="table o_report_block_table mb-4">
						<thead>
							<th>NAME</th>
							<th>ID</th>
							<th>DETAILS</th>
							<th>AMOUNT</th>
						</thead>
						<tbody>
							<td>
								<t t-esc="o.imprest_employee.name"/>
							</td>
							<td>
								<t t-esc="o.imprest_employee.emp_id"/>
							</td>
							<td>
								<t t-esc="o.x_studio_details_1"/>
							</td>
							<td>
								<t t-if="o.imprest_currency.name == 'BDT'">
									<t t-esc="o.imprest_amount_bdt"/>
									<span>
										<t t-esc="o.imprest_currency.name"/>
									</span>
								</t>
								<t t-if="o.imprest_currency.name == 'USD'">
									<t t-esc="o.imprest_amount_usd"/>
									<span>
										<t t-esc="o.imprest_currency.name"/>
									</span>
								</t>
							</td>
						</tbody>
					</table>
					<div class="row mb-4">
						<div class="col-4">
							<span>
								<strong>HR APPROVAL :</strong>
							</span>
							<p>
								<t t-if="(o.state == 'approved' or o.state == 'checked' or o.state == 'submit')">
									<span>Md. Shahid Hossain</span>
								</t>
							</p>
						</div>
						<div class="col-4">
							<span>
								<strong>ACCOUNTS APPROVAL :</strong>
							</span>
							<p>
								<t t-if="(o.state == 'approved' or o.state == 'checked')">
									<span>Suranjan Kumar</span>
								</t>
							</p>
						</div>
						<div class="col-4">
							<span>
								<strong>CEO APPROVAL :</strong>
							</span>
							<p>
								<t t-if="(o.state == 'approved')">
									<span>Deepakkumar Mukundkumar Shah</span>
								</t>
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col text-center">
							<span>Note : This report is auto generated by Odoo</span>
						</div>
					</div>
				</div>
				</t>
			</t>
		</t>
	</template>
</odoo>   
    