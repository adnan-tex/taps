<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- This template is for a table at the top of purchase views that shows some KPIs. -->
    <t t-name="hr_expense.ExpenseDashboard">
        <div class="o_expense_dashboard container">
        <div class="row">
            <div class="col-sm-5">
            <table class="table table-sm">
                <!-- thead needed to avoid list view rendering error for some reason -->
                <thead>
                    <tr>
                    <!-- can't use th tag due to list rendering error when no values in list... -->
                        <td class="o_text">
                            <div>All Approvals</div>
                        </td>
                        <td class="o_main o_dashboard_action" title="HR Approvals" name="hr_expense.expense_action_dashboard" context='{"search_default_draft": true}'>
                            <a href="#"><t t-esc="values['hr_approvals']"/><br/>HR</a>
                        </td>
                        <td class="o_main o_dashboard_action" title="Accounts Approvals" name="hr_expense.expense_action_dashboard" context='{"search_default_submitted": true}'>
                            <a href="#"><t t-esc="values['accounts_approvals']"/><br/>Accounts</a>
                        </td>
                        <td class="o_main o_dashboard_action" title="CEO Approvals" name="hr_expense.expense_action_dashboard" context='{"search_default_checked": true}'>
                            <a href="#"><t t-esc="values['ceo_approvals']"/><br/>CEO</a>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="o_text">
                            <div>My RFQs</div>
                        </td>
                        <td class="o_main o_dashboard_action" title="My Draft" name="hr_expense.expense_action_dashboard" context='{"search_default_draft_rfqs": true}'>
                            <a href="#"><t t-esc="values['my_to_send']"/></a>
                        </td>
                        <td class="o_main o_dashboard_action" title="My Waiting" name="hr_expense.expense_action_dashboard" context='{"search_default_waiting_rfqs": true}'>
                            <a href="#"><t t-esc="values['my_waiting']"/></a>
                        </td>
                        <td class="o_main o_dashboard_action" title="My Late" name="hr_expense.expense_action_dashboard" context='{"search_default_late_rfqs": true}'>
                            <a href="#"><t t-esc="values['my_late']"/></a>
                        </td>
                    </tr>
                </tbody>
            </table></div>

            <div class="col-sm-7">
            <table class="table table-sm">
                <!-- thead needed to avoid list view rendering error for some reason -->
                <thead>
                    <tr>
                        <!-- can't use th tag due to list rendering error when no values in list... -->
                        <td class="o_text">Budget Value (<t t-esc="values['company_currency_symbol']"/>)</td>
                        <td class="o_main o_dashboard_action"><a href="#"><span><t t-esc="values['budget_value']"/></span></a></td>
                        <td class="o_text">Consumed Value (<t t-esc="values['company_currency_symbol']"/>)</td>
                        <td class="o_main o_dashboard_action" name="hr_expense.expense_action_dashboard" context='{"search_default_to_post": true, "search_default_approved": true, "search_default_ex_date_approve": true}'><a href="#"><span><t t-esc="values['expense_value']"/></span></a></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="o_text">Consumed Percent (%)</td>
                        <td class="o_main o_dashboard_action"><a href="#"><span><t t-esc="values['expense_percent']"/></span></a></td>
                        <td class="o_text">Due Value (<t t-esc="values['company_currency_symbol']"/>)</td>
                        <td class="o_main o_dashboard_action"  name="hr_expense.expense_action_dashboard"><a href="#"><span><t t-esc="values['due_amount']"/></span></a></td>
                    </tr>
                </tbody>
            </table></div>
        </div></div>
    </t>
</templates>
