<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_manufacturing_plan" model="ir.ui.view">
        <field name="name">manufacturing.plan.tree</field>
        <field name="model">manufacturing.order</field>
        <field name="arch" type="xml" >
            <tree string="Manufacturing Order" create="false" delete="false" >
                <header>
                    <button name="button_plan" type="object" string="Plan"/>
                </header>
                <field name="oa_id"/>
                <field name="company_id"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="validity_date"/>
                <field name="product_template_id"/>
                <field name="fg_categ_type"/>
                <field name="product_uom"/>
                <field name="topbottom"/>
                <field name="slidercodesfg"/>
                <field name="finish"/>
                <field name="shade"/>
                <field name="sizein"/>
                <field name="sizecm"/>
                <field name="product_uom_qty"/>
                <field name="done_qty"/>
                <field name="balance_qty"/>
                <field name="dyeing_plan"/>
                <field name="dyeing_plan_qty"/>
            </tree>
        </field>
    </record>

    <record id="action_manufacturing_order" model="ir.actions.act_window">
        <field name="name">Manufacturing Plan</field>
        <field name="res_model">manufacturing.order</field>
        <field name="view_mode">tree</field>
        <!-- <field name="search_view_id" ref="view_sale_order_flow_search" /> -->
    </record>

    <menuitem id="menu_manufacturing_plan" 
              name="Manufacturing Plan" 
              action="action_manufacturing_plan" 
              parent="mrp.menu_mrp_manufacturing"
              sequence="5"/>
</odoo>    