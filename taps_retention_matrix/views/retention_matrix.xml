<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="view_retention_matrix_form" model="ir.ui.view">
        <field name="name">retention.matrix.view.from</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <form string="Retention Matrix">
                 <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create':true, 'no_open':true}"/>
                            <field name="job_id"/>
                            <field name="grade"/>
                        </group>
                        <group>
                            <field name="year" widget="selection"/>
                            <field name="quarter"/>
                            <field name="impact"/>
                            <field name="risk"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
      <record model="ir.ui.view" id="view_retention_matrix_tree">
        <field name="name">retention.matrix.tree</field>
        <field name="model">retention.matrix</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Retention" expand="1" edit="1" editable="top">
                <field name="employee_id" required="1"/>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="year" widget="selection"/>
                <field name="quarter"/>
                <field name="impact"/>
                <field name="risk"/>
                
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_retention_kanban">
        <field name="name">retention.matrix.kanban</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <kanban>
               <field name="employee_id"/>
                <field name="impact"/>
                <field name="risk"/>
                <templates>
                    <t t-name="kanban-box">
                    <ul>
                        <li>Impact:<field name="impact"/></li>
                        <li>Risk:<field name="risk"/></li>
                    </ul>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


      <record model="ir.ui.view" id="retention_search_view">
        <field name="name">retention.matrix.search</field>
        <field name="model">retention.matrix</field>
        <field name="arch" type="xml">
            <search>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="impact"/>
                <field name="risk"/>
                
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                    <field name="department_id" icon="fa-users" enable_counters="1"/>
                    <!-- <field name="employee_id" icon="fa-users" enable_counters="1"/> -->
                </searchpanel>
            </search>
        </field>
    </record>

          
      <record model="ir.actions.act_window" id="retention_list_action">
        <field name="name">Retention</field>
        <field name="res_model">retention.matrix</field>
        <field name="context" eval="{'search_default_my_retention': 1}"/>
        <field name="view_mode">tree,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first Retention Heat Map
            </p>
        </field>
    </record>


    <menuitem 
        id="main_retention_menu" 
        name="Retention Matrix" 

        web_icon="taps_retention_matrix,static/description/icon.png"/>
        
        
        

    <menuitem id="retention_menu" name="Retention" sequence="1" parent="main_retention_menu"/>

    <menuitem id="heat_map_menu" name="Heat Map" parent="main_retention_menu" action="retention_list_action"/>
    <menuitem id="reporting_menu" name="Reporting" parent="main_retention_menu" action="retention_list_action"/>
    
  </data>
</odoo>